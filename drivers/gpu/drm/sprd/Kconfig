config ZTE_LCD_TP_GESTURE_POWER_OFF_SEQ
        depends on ZTE_LCD_COMMON_FUNCTION
        bool "Support lcd tp gesture power off sequence"
        default n
config ZTE_LCD_SPI_PANEL
        depends on ZTE_LCD_COMMON_FUNCTION
